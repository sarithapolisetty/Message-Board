
<br>
<h3>All Users</h3>
<div class="card mb-4">
<table class="table table-borderless table-hover">
  <thead>
    <tr class="table-success">
      <th style="border-radius:8px 0px 0px 0px">First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Created At</th>
      <th style="border-radius:0px 8px 0px 0px">Admin?</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= time_ago_in_words(user.created_at) %></td>
        <td><%= user.admin? %></td>
      
        <td>
        <%= link_to('edit', edit_user_path(user), class:"text-success mr-3")%>
        <%= link_to('remove', user_path(user.id),
        method: :delete, class:"text-danger")%>
      </td> 
      </tr>   
    <% end %>
  </tbody>
</table>
</div>
